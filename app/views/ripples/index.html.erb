<p id="notice"><%= notice %></p>

<h1>Ripples</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ripples.each do |ripple| %>
      <tr>
        <% if ripple.url && ripple.url != '' %>
          <td><a href="<%= ripple.url %>"><%= ripple.name %></a></td>
        <% else %>
          <td><%= ripple.name %></td>
        <% end %>
        <td><%= ripple.message %></td>
        <td><%= link_to 'Show', ripple %></td>
        <td><%= link_to 'Edit', edit_ripple_path(ripple) %></td>
        <td><%= link_to 'Destroy', ripple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

