<%= form_with(model: ripple) do |form| %>
  <% if ripple.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ripple.errors.count, "error") %> prohibited this ripple from being saved:</h2>

      <ul>
        <% ripple.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Your name or alias (required)' %>
    <%= form.text_field :name, size: 60 %>
  </div>

  <div class="field">
    <%= form.label 'A website, yours or otherwise (optional)' %>
    <%= form.text_field :url, size: 60 %>
  </div>

  <div class="field">
    <%= form.label 'Your message/note/quote/rant (required)' %>
    <%= form.text_area :message, rows: 25, cols: 80 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
